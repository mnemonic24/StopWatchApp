<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context="com.example.tomori24.kotlintest.MainActivity" android:id="@+id/UI"
        android:layout_width="match_parent" android:visibility="visible">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/_00_00_00"
            android:visibility="visible" android:textSize="60sp" android:id="@+id/timeText"
            tools:layout_editor_absoluteY="109dp" tools:layout_editor_absoluteX="89dp" android:textAlignment="center"
            tools:ignore="MissingConstraints"/>
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/sub"
            android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/rapList"
            android:textSize="16sp"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/main"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/rapList"
            android:textSize="16sp"/>
    <ListView
            android:layout_width="368dp"
            android:layout_height="263dp" tools:layout_editor_absoluteY="306dp" tools:layout_editor_absoluteX="21dp"
            android:id="@+id/rapList" tools:ignore="MissingConstraints"
    />

</android.support.constraint.ConstraintLayout>
